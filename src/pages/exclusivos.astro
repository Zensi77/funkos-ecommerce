---
import Container from '../components/Container.astro';
import Layout from '../layouts/Layout.astro';
import funkos from '../data/funko.json';

const ofertas = funkos
  .sort(() => 0.5 - Math.random())
  .slice(1, 5)
  .map((item) => ({
    name: item.title,
    price: `${Math.floor(Math.random() * 100) + 1} $`,
    img: item.imageName,
    series: item.series,
  }));

const coleccionismo = funkos
  .sort(() => 0.5 - Math.random())
  .slice(1, 5)
  .map((item) => ({
    name: item.title,
    price: `${Math.floor(Math.random() * 100) + 1} $`,
    img: item.imageName,
    series: item.series,
  }));
---

<Layout
  title='Exclusivos'
  pageDescription='PÃ¡gina de funkos exclusivos de Funkonnection'
>
  <div class='w-100 m-auto mt-3 h-20'>
    <div class='input-group'>
      <input
        type='text'
        id='exclusiveSearch'
        class='form-control'
        placeholder='Introduce el termino de busqueda'
        aria-label='Search'
        aria-describedby='basic-addon1'
      />
      <button class='input-group-text'>
        <i class='bi bi-search'></i>
      </button>
    </div>
  </div>

  <div class='d-flex flex-wrap gap-5 w-100 justify-content-around m-auto mt-5'>
    <button
      class='btn btn-primary rounded-5 px-4 text-white fw-bold hvr-box-shadow-outset'
      >Peliculas y series</button
    >
    <button
      class='btn btn-primary rounded-5 px-4 text-white fw-bold hvr-box-shadow-outset'
      >Videojuegos</button
    >
    <button
      class='btn btn-primary rounded-5 px-4 text-white fw-bold hvr-box-shadow-outset'
      >Animacion y anime</button
    >
    <button
      class='btn btn-primary rounded-5 px-4 text-white fw-bold hvr-box-shadow-outset'
      >Music y deportes</button
    >
  </div>

  <div class='container-fluid'>
    <h3 class='text-uppercase my-5'>Ofertas y promociones!!!</h3>
    <Container
      articles={ofertas}
      animation='zoom-out-up'
      duration='1000'
      delay='0'
    />

    <h3 class='text-uppercase my-5'>Ranking de coleccionismo</h3>
    <Container
      articles={coleccionismo}
      animation='zoom-out-up'
      duration='1000'
      delay='0'
    />
  </div>
</Layout>
