---
import { Image } from 'astro:assets';

const items = [
  { href: '/', text: 'Inicio' },
  { href: '/peliculas', text: 'Funkos peliculas' },
  { href: '/series', text: 'Funkos series' },
  { href: '/exclusivos', text: 'Funkos exclusivos' },
];

const url = Astro.url.pathname;
---

<header
  class='navbar navbar-expand-lg bg-primary rounded-bottom-4 navbar-dark position-sticky px-4 py-3 border-bottom'
>
  <div
    class='container-fluid d-flex align-items-center justify-content-between'
  >
    <a
      href='/'
      class='navbar-brand'
    >
      <Image
        class='rounded-3'
        src={'/logo-2.jpg'}
        alt='Logotipo de la tienda'
        width='140'
        height='80'
      />
    </a>

    <button
      class='navbar-toggler'
      type='button'
      data-bs-toggle='collapse'
      data-bs-target='#navbarNav'
      aria-controls='navbarNav'
      aria-expanded='false'
      aria-label='Toggle navigation'
    >
      <span class='navbar-toggler-icon'></span>
    </button>

    <div
      class='collapse navbar-collapse justify-content-center'
      id='navbarNav'
    >
      <ul class='navbar-nav mx-auto'>
        {
          items.map((item) => (
            <li class='nav-item'>
              <a
                href={item.href}
                class={`nav-link fw-bold px-3 ${url === item.href ? 'active' : ''}`}
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>

      <div class='navbar-icons d-flex align-items-center gap-3'>
        <i class='bi bi-cart4 fs-4'></i>
        <a href='/login'>
          <i class='bi bi-box-arrow-in-right fs-4'></i>
        </a>
      </div>
    </div>
  </div>
</header>
