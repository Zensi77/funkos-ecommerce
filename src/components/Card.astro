---
interface Props {
  title: string;
  subtitle: string;
  img: string;
  width?: number;
  imgSize?: number;
  series?: string[];
  animationHover?: string;
  animationScroll?: string;
  scrollDelay?: string;
}
const {
  title,
  subtitle,
  img,
  width = 10,
  imgSize = 150,
  series,
  animationHover = 'hvr-grow',
  animationScroll,
  scrollDelay,
} = Astro.props;

import { Image } from 'astro:assets';
---

<div
  class=`card bg-light shadow-lg rounded-3 ${animationHover}`
  style={`width: ${width}rem;`}
  data-aos={animationScroll}
  data-aos-delay={scrollDelay}
  data-aos-duration='1000'
>
  <Image
    class='card-img-top p-3'
    src={img}
    alt='Imagen de portada del funkopop'
    width={imgSize}
    height={imgSize}
  />
  <div class='card-body'>
    <h5 class='card-title text-center'>{title}</h5>
    <h6 class='card-subtitle mb-2 text-muted text-center'>
      {subtitle}
      <div class='d-flex gap-2 h-100 flex-column align-content-end'>
        {
          series &&
            series.map((serie) => (
              <span class='badge bg-primary text-white mx-1 overflow-hidden'>
                {serie}
              </span>
            ))
        }
      </div>
    </h6>
  </div>
</div>
