---
import Card from './Card.astro';

interface Props {
  title?: string;
  animation?: string;
  duration?: string;
  delay?: string;
  articles: Array<{
    name: string;
    price: string;
    img: string;
    series: string[];
  }>;
}

const { title, animation, duration, delay, articles } = Astro.props;
---

<div
  class='bg-secondary w-100 container-fluid shadow-lg rounded-4 p-4'
  data-aos={animation}
  data-aos-duration={duration}
  data-aos-delay={delay}
>
  <div class='row align-items-center'>
    {
      title && (
        <div class='col-12 col-md-3 col-lg-2 text-center fw-bold fs-6 px-3 py-2 text-white rounded'>
          {title}
        </div>
      )
    }
    <div class={`col-12 ${title ? 'col-md-9 col-lg-10' : 'mx-auto'}`}>
      <div class='row g-3 justify-content-center'>
        {
          articles.map((article) => (
            <div class='col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center'>
              <Card
                title={article.name}
                subtitle={article.price}
                img={article.img}
                series={article.series}
                width={100}
                imgSize={200}
                animationHover='hvr-float-shadow'
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
