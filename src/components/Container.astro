---
import Card from './Card.astro';

interface Props {
  title?: string;
  animation?: string;
  duration?: string;
  delay?: string;
  articles: Array<{
    name: string;
    price: string;
    img: string;
    series: string[];
  }>;
}

const { title, animation, duration, delay, articles } = Astro.props;
---

<div
  class='bg-secondary w-100 container-fluid shadow rounded-4 p-3'
  data-aos={animation}
  data-aos-duration={duration}
  data-aos-delay={delay}
>
  <div class='row'>
    {
      title && (
        <div class='col-12 col-md-3 fw-bold fs-5 text-center align-content-center mb-3 mb-md-0'>
          {title}
        </div>
      )
    }
    <div class={`col-12 ${title ? 'col-md-9' : ''}`}>
      <div class='row justify-content-center'>
        {
          articles.map((article) => {
            return (
              <div class='col-12 col-sm-6 col-md-6 col-lg-3 mb-2 d-flex gap-3 justify-content-center'>
                <Card
                  title={article.name}
                  subtitle={article.price}
                  img={article.img}
                  series={article.series}
                  width={20}
                  imgSize={250}
                  animationHover='hvr-float-shadow'
                />
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</div>
